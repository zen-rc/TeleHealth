<%- include('partials/header') -%>

  <div class="container">
    <div class="chalkboard-nav writing">
      <p class="writing whitey big mb-4">Student Profile's Page</p>
      <a href="/profile" class="chalkboard-link writing">Create Profile</a>
      <a href="/logout" class="chalkboard-link writing">Log out</a>
      

    </div>
    <div class="content thirty">
      <div class="container">
        <div class="row justify-content-center mt-5">
          <ul class="row list-unstyled">
            <% for(var i=0; i<posts.length; i++) {%>
              <li class="col-6 justify-content-between mt-5 student short">
                <a href="/post/<%= posts[i]._id%>">
                  <img class="img-fluid" src="<%= posts[i].image%>">
                  <h4 class=" mt-2 whitey writing text-center">
                    <%= posts[i].name%>
                  </h4>
                </a>
              </li>
              <% } %>
          </ul>
        </div>
      </div>
      <div class="clouds p-5"></div>
      <div class="clouds p-5"></div>
      <%- include('partials/footer') -%>